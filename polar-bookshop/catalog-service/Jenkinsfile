pipeline {
    agent any
    environment {
        REPO_URL          = 'https://github.com/huynhminhchu/catalog-service.git'
    }
    stages {
        stage('Checkout'){
            steps {
                dir("polar-bookshop") {
                    git(
                        url: "https://github.com/huynhminhchu/catalog-service.git",
                        branch: "master",
                        changelog: true,
                        poll: true
                    )
                }
            }
        }

        stage('Test') {
            steps {
                sh 'ls -la'
            }
            // post {
            //     success {
            //         echo "Now Archiving the Artifacts....."
            //         archiveArtifacts artifacts: '**/*.jar'
            //     }
            // }
        }
        stage('Security Check') {
            steps {
                sh 'ls'
            }
            // post {
            //     success {
            //         echo "Now Archiving the Artifacts....."
            //         archiveArtifacts artifacts: '**/*.jar'
            //     }
            // }
        }
        stage('Build') {
            steps {
                script {
                    dir("polar-bookshop/catalog-service") {
                        def commitHash = sh(script: 'git rev-parse --short HEAD', returnStdout: true)
                        env.IMAGE_TAG = sh(returnStdout: true, script: commitHash).trim()
                        // sh """
                        //     mvn -B -DskipTests clean package
                        //     docker build -t catalog-service:${env.GIT_COMMIT} .
                        // """
                        sh 'ls -la'
                        sh """echo ${env.COMMIT}"""
                    }
                }
            }
        }
    }
}